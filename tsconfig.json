{
   "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "moduleResolution": "node",
      "outDir": "./dist-deploy",
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "noEmitOnError": true,
      "removeComments": true,
      "isolatedModules": false,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "declaration": true,
      "declarationDir": "./dist-deploy/typings"
   },
   "compileOnSave": false,
   "buildOnSave": false,
   "typeRoots": ["node_modules/@types"],
   "include": ["src"]
}