{
  "name": "debian-node-deploy",
  "version": "1.3.6",
  "description": "Unifying deployment tasks for my production server",
  "main": "index.js",
  "bin": {
    "deployNodeApp": "./cli/deploy.node.app.js",
    "deploySinglePageApp": "./cli/deploy.spa.app.js"
  },
  "scripts": {
    "test": "jest --watchAll src --coverage",
    "test:silentcov": "jest --coverage --silent --runInBand --watchAll=false",
    "test:badges": "yarn test:silentcov && jest-coverage-badges --output ./badges",
    "test:clearcache": "jest --clearCache",
    "copy-badges": "copyfiles ./badges/* ./dist-deploy/",
    "clearbuild": "del-cli ./dist-deploy",
    "build": "yarn clearbuild && tsc",
    "build:publish": "yarn test:badges && yarn copy-badges && yarn clearbuild && tsc --project tsconfig-publish.json && node ./project-utils/scripts/copy.package.json.file.js",
    "start": "yarn build && node ./dist-deploy/index.js",
    "publish:pkg": "yarn build:publish && cd dist-deploy && yarn publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpb06/debian-node-deploy.git"
  },
  "author": "jpb06",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jpb06/debian-node-deploy/issues"
  },
  "homepage": "https://github.com/jpb06/debian-node-deploy#readme",
  "dependencies": {
    "ajv": "^6.12.6",
    "archiver": "^4.0.2",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "fs-extra": "^9.0.1",
    "node-ssh": "^10.0.2",
    "ora": "^4.1.1"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/archiver": "^3.1.1",
    "@types/chalk": "^2.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^25.2.3",
    "@types/node-ssh": "^7.0.0",
    "@types/ora": "^3.2.0",
    "copyfiles": "^2.4.1",
    "jest": "^26.6.3",
    "jest-coverage-badges": "^1.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^3.9.7"
  },
  "types": "./typings/index.d.ts"
}